{
    "about": {
        "datasetID": {{ dataset.id | tojson }},
        "datasetName": {{ dataset.name | tojson }},
        "description": {{ dataset.description | tojson }},
        "license": {{ dataset.license | tojson }},
        "source": {{ dataset.source | tojson }},
        "sourceURI": {{ dataset.uri  | tojson }},
        "approximateSize": {{ dataset.size  | tojson }},
        "datasetSchemaVersion": "3.3.1",
        "redacted": false,
        "datasetVersion": "1.0",
        "digest": {{ dataset.digest | tojson }}
    },
    "dataResources": [
        {
            "resID": "learningData",
            "resPath": "tables/learningData.csv",
            "resType": "table",
            "resFormat": [
                "text/csv"
            ],
            "isCollection": false,
            "columns": [
                {
                    "colIndex": 0,
                    "colName": "d3mIndex",
                    "colType": "integer",
                    "role": [
                        "index"
                    ]
                },
                {% for column in columns %}
                {
                    "colIndex": {{ loop.index | tojson }},
                    "colName": {{ column.name | tojson }},
                    "colType": {{ column.type | tojson }},
                    "colDescription": {{column.description | tojson}},
                    "role": [
                        "attribute"
                    ]
                },
                {% endfor %}
            ]
        }
    ]
}